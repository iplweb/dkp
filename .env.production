# Production Environment Variables for DKP Docker Deployment
# Copy this file to .env.production and modify the values as needed

# Django settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here-change-this-immediately
DOMAIN=your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1

# SSL Certificate email (for Let's Encrypt)
EMAIL=your-email@your-domain.com

# Database settings
DB_NAME=dkp
DB_USER=dkp
DB_PASSWORD=your-secure-database-password
DB_HOST=postgres
DB_PORT=5432

# Redis settings
REDIS_URL=redis://redis:6379/0

# Django Sites Framework
SITE_ID=1

# Authentication settings
LOGIN_URL=account_login
LOGIN_REDIRECT_URL=/hospital/dashboard/
LOGOUT_REDIRECT_URL=/

# Social authentication (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# CORS settings (if needed)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=your-smtp-server.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Security settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Daphne settings
DAPHNE_HOST=0.0.0.0
DAPHNE_PORT=8000
DAPHNE_VERBOSE_LEVEL=2